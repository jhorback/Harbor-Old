<div data-templatefor="productlinkView">
    <div data-rel="pageLink" data-bind="class: tileClassName">
        <a data-bind="href: link, showif: hasPreviewImage" class="media">
            <img data-bind="src: previewImageSrc" />
        </a>
        <div class="caption">
	        <h2><a data-bind="text: title, href: link"></a></h2>
	        
	        @* 
			Exchanging the button for price(s)
				$10.00
				-- add description if different then title
				$10.00 - Print
				$100.00 - Original
				
				then description?
			 *@
	        
	        <div data-rel="buttonPreview">
			</div>
        </div>
    </div>
    <div data-rel="edit">
        <div>
            <label>
                <input type="radio" name="tileDisplay" value="normal">
                <span>Tile display</span>
            </label>
            <label>
                <input type="radio" name="tileDisplay" value="wide">
                <span>Wide display</span>
            </label>
        </div>
        <div>
            <button data-event="openPageSelector" class="button">Select a product</button>
        </div>
    </div>
</div>