<div data-view="titleView" class="clearfix" style="z-index: 100;">
	<h1 data-bind="text:displayTitle" class="float-left"></h1>
	<form>
		<div style="position: absolute; right: 1em; top: -2em;" data-bind="showif:enableTitleBackground">
			<button type="button" class="icon-up" data-event="click:moveUp" title="Move background image up"></button>
			<button type="button" class="icon-down" data-event="click:moveDown" title="Move background image down"></button>
		</div>
		<div style="position: absolute; right: 1em; bottom: .5em; line-height: 1.2em;">
			<div>
				<label data-event="click: enableTitleBackgroundClicked">
					<input type="checkbox" name="enableTitleBackground" />
					Show background image
				</label>
			</div>
			<div>
				<label data-event="click: hideTitlebarClicked">
					<input type="checkbox" name="hideTitlebar" />
					Hide title bar
				</label>
			</div>
		</div>
	</form>
</div>