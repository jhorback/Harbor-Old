<section class="page centered">
    <div class="page-header">
        <h1 class="float-left">Pages</h1>
        <div class="float-right">
            <button type="button" data-rel="cancel">Cancel</button>
        </div>
    </div>
    <div class="page-body">
        <div class="page-content">
            <form>
                <fieldset>
                    <div class="form-field">
                        <input name="search" type="text" placeholder="search" size="50" autofocus />
                        <input type="submit" value="Search" />
                    </div>
                </fieldset>
                <div class="pageselector-results tiles">
                    <ul>
                        
                        <!-- pages collection -->
                        <li data-id="{{id}}" tabindex="0" class="tile col5 hover">
                            <div class="media">
                                <img src="{{thumbUrl}}" />
                            </div>
                            <div class="caption">
                                <h3>{{title}}</h3>
                                <span>{{previewText}}</span>
                            </div>
                        </li>
                        <!-- -->
                        

                    </ul>
                </div>
            </form>
        </div>
    </div>
</section>