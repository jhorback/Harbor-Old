<section class="page centered">
	<div class="page-header">
		<div class="page-header-content">
			<h1 data-bind="displayName"></h1>
			<fieldset class="float-right">
				<button type="button" data-rel="cancel">Cancel</button>		
				<button class="loud">Save</button>
			</fieldset>
		</div>
	</div>
	<div class="page-body"> 
		<div class="page-content">
			<form>
				<span class="alert-error"></span>
				<fieldset class="form-wide">
					<legend></legend>
					<div class="form-field">
						<label>Username</label>
						<div data-bind="userName"></div>
					</div>
					<div class="form-field">
						<label for="useradmin-name">Name</label>
						<input type="text" name="displayName" id="useradmin-name" autofocus/>
						<span data-validation-for="displayName"></span>
					</div>
					<div class="form-field">
						<label for="useradmin-email">Email</label>
						<input type="text" name="email" id="useradmin-email"/>
						<span data-validation-for="email"></span>
					</div>
					<div class="form-field">
						<input type="checkbox" name="enabled" id="useradmin-enabled"/>
						<label for="useradmin-enabled">Enabled</label>
					</div>
				</fieldset>
				<fieldset>
					<legend>Authorization</legend>
					<div data-templ="useradmin-roles"></div>
				</fieldset>
				<fieldset>
					<legend>Delete user</legend>
					<p>
						Deleting the user will also delete all user settings, pages, files, etc.
						<button type="button" id="useradmin-delete" class="margin-left">Delete</button>
					</p>
				</fieldset>
				<div class="form-controls">
					<button type="button" data-rel="cancel">Cancel</button>	
					<button class="loud">Save</button>
				</div>
			</form>
		</div>
	</div>
</section>