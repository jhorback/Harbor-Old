<section class="page centered">
	<div class="page-header">
		<h1>Add User <span  data-bind="displayName"></span></h1>
		<fieldset class="float-right">
			<button type="button" data-rel="cancel">Cancel</button>		
			<button class="loud">Add</button>
		</fieldset>
	</div>
	<div class="page-body"> 
		<div class="page-content">
			<form>
				<span class="alert-error"></span>
				<fieldset class="form-stacked">
					<legend></legend>
					<div class="form-field">
						<label for="userAdmin-userName">Username</label>
						<input type="text" name="userName" id="useradmin-userName" autofocus/>
						<span data-validation-for="userName"></span>
					</div>
					<div class="form-field">
						<label for="userAdmin-password">Password</label>
						<input type="password" name="password" id="useradmin-password"/>
						<span data-validation-for="password"></span>
					</div>
					<div class="form-field">
						<label for="userAdmin-confirmPassword">Confrim password</label>
						<input type="password" name="confirmPassword" id="useradmin-confirmPassword"/>
						<span data-validation-for="confirmPassword"></span>
					</div>
				</fieldset>
				<fieldset class="form-stacked">
					<legend></legend>
					<div class="form-field">
						<label for="useradmin-name">Name</label>
						<input type="text" name="displayName" id="useradmin-name"/>
						<span data-validation-for="displayName"></span>
					</div>
					<div class="form-field">
						<label for="useradmin-email">Email</label>
						<input type="text" name="email" id="useradmin-email"/>
						<span data-validation-for="email"></span>
					</div>
					<div class="form-field">
						<input type="checkbox" name="enabled" id="useradmin-enabled"/>
						<label for="useradmin-enabled">Enabled</label>
					</div>
				</fieldset>
				<fieldset>
					<legend>Authorization</legend>
					<div data-templ="useradmin-roles"></div>
				</fieldset>
				<div class="form-controls">
					<button type="button" data-rel="cancel">Cancel</button>	
					<button class="loud">Add</button>
				</div>
			</form>
		</div>
	</div>
</section>