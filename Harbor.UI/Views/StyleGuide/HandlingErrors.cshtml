@section scripts {
	<script>
		var bootstrap = function (ajaxRequest) {

			$("[data-event=ajaxRequest").click(function (event) {
				var target;

				event.preventDefault();
				target = $(event.target);
				ajaxRequest.handle($.get(target.attr("href")));
			});
		};

		var testApp = context.app("testApp").use("bbext");
		testApp.start([
			"ajaxRequest",
			bootstrap
		]);
		testApp.start();
	</script>
}
