<template id="editEmailView">
<div>
    <form>
        <span class="alert-error"></span>
        <fieldset>
            <div class="form-field">
                @*<label for="firstName">First</label>*@
                <input autofocus id="ua-email" name="email" type="text" size="40">
                <span data-validation-for="email"></span>
            </div>
        </fieldset>
        <div class="form-controls">
            <input type="submit" value="Save" class="loud">
            <input type="button" value="Cancel" data-rel="back">
