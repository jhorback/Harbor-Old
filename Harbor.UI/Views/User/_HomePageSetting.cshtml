@using Harbor.UI.Extensions
@model Harbor.UI.Models.PageDto
<div class="tile tile-wide hover">
	@if (Model != null && Model.previewImage != null)
	{		
		<img class="media" src="@Model.previewImage.thumbUrl" @Html.JstPropFor(m => m.previewImage.thumbUrl, clientBinding: true, clientAttr: "src")>
	}
	<div class="caption">
		<h2>@Html.JstPropFor(m => m.title, clientBinding: true)</h2>
		<p>
			@Html.JstPropFor(m => m.previewText, clientBinding: true)
		</p>
	</div>
</div>