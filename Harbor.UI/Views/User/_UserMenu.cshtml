@using Harbor.Domain.Security
@using Harbor.UI.Extensions
@using Harbor.UI
<div class="usermenu menulist">
	<h1></h1>
	<hr />
	<ul>
		<li><a href="~/User/Account">Account</a></li>
		<li id="usermenu-docslink"><a href="~/User/Pages">Pages</a></li>
		<li id="usermenu-fileslink"><a href="~/User/Files">Files</a></li>
		<li id="usermenu-settingslink"><a href="~/User/Settings">Website Settings</a></li>
	</ul>	
	<hr />
	<div class="form-field">
		<button id="usermenu-addpage">Add a page</button>
	</div>
		@*<div>
		<button id="usermenu-uploadfile">Upload a file</button>
	</div>*@
	<div class="form-field">	
		<a href="~/User/SignOut" id="usermenu-signout" class="button attn ">Sign Out</a>
	</div>
	
	@if (Html.UserHasPermit(UserFeature.SiteSettings) || Html.UserHasPermit(UserFeature.SystemSettings))
	{
		<hr />
		<h2><a href="~/home/about">
			    About @HarborApplication.Version
		    </a>
		</h2>
		<div class="quiet"><small>Current full version: @HarborApplication.FullVersion</small></div>
	}
	
	@if (Html.UserHasPermit(UserFeature.SystemSettings))
	{
		<hr />
		@Html.Partial("_DevLinks")
		@*<hr />
		<strong>Connection string:</strong>
		@System.Configuration.ConfigurationManager.ConnectionStrings["HarborContext"].ConnectionString;
		*@
	}
</div>