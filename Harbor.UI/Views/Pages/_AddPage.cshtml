<form>
	<span class="alert-error"></span>
	<div class="form-field">
		<label for="pageadder-title">Title</label>
		<input id="pageadder-title" type="text" name="title" autofocus />
		<span data-validation-for="title"></span>
	</div>
	<div class="form-field">
		<label for="pageadder-pagetypekey">Page type</label>
		<select id="pageadder-pagetypekey" name="pageTypeKey">
		</select>
		<div data-bind="pageTypeDescription" class="label-margin"></div>
	</div>
	<div class="form-controls">
		<input type="submit" value="Save" class="loud">
		<input type="button" value="Cancel" data-rel="back">		
	</div>
</form>